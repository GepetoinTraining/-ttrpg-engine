{
  "name": "@ttrpg/bend",
  "version": "0.1.0",
  "description": "TTRPG Engine Backend - API & Realtime Server",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target node",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "bun run src/db/migrations.ts",
    "db:seed": "bun run src/db/seed.ts"
  },
  "dependencies": {
    "@clerk/backend": "^1.0.0",
    "@google/genai": "^0.1.0",
    "@libsql/client": "^0.5.0",
    "@trpc/server": "^11.0.0",
    "cors": "^2.8.5",
    "ws": "^8.16.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "@types/cors": "^2.8.17",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  }
}
